<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="horizontal"
    android:id="@+id/scrollOppurtunityCreation"
    tools:context=".oppurtunity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/Relative_layout"
    >


    <TextView
        android:text="Oppurtunity Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/cus_opptyname"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/avenirlight"
       android:textColor="#000"
        android:textStyle="bold">

    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:hint= "Opportunity Name"
        android:paddingTop="10dp"
        android:id="@+id/editcus_opptyname"
        android:layout_below="@+id/cus_opptyname"
        android:drawableBottom="@drawable/shapes1"
        android:selectAllOnFocus="false"
       android:paddingBottom="10dp"
        android:textCursorDrawable="@drawable/colorcursor"
        android:fontFamily="@font/avenirlight"
        android:padding="15dp"
        android:textSize="18sp"
        android:layout_marginTop="15dp">


    </EditText>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/Relative_layout1"
        android:layout_below="@+id/editcus_opptyname"
        android:layout_marginTop="10dp">

        <TextView
            android:text="Expected Close date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cus_expctddate"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/avenirlight"
            android:textStyle="bold">

        </TextView>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/date_time_set"
        android:layout_width="300dp"
        android:text="Set Date"
        android:fontFamily="@font/avenirmedium"
       android:padding="7dp"
        android:layout_below="@+id/cus_expctddate"
        android:layout_height="40dp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"
        android:backgroundTintMode="add"
        android:textSize="18sp"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/calendaricon"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="60dp"/>
        <TextView
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-13dp"
            android:background="@drawable/shapes1"
            android:layout_below="@id/date_time_set"/>
    </RelativeLayout>
    <TextView
        android:text="Classfication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:id="@+id/cus_clssfy"
        android:textColor="#000"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/avenirlight"
        android:textStyle="bold">

    </TextView>
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/listClassifications"
        android:layout_below="@+id/cus_clssfy"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="300dp"
        android:textSize="18sp"
        android:layout_height="35dp"
        android:hint= "select Stages"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        />

    <TextView
        android:text="Sales Stage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/avenirlight"
        android:textSize="18sp"
        android:id="@+id/cus_salesstage"
        android:textColor="#000"
        android:textStyle="bold">

    </TextView>
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/listStages"
        android:layout_below="@+id/cus_salesstage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:hint= "select Stages"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:textSize="18sp"/>

    <TextView
        android:text="Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:id="@+id/cus_value"

        android:textColor="#000"
        android:fontFamily="@font/avenirlight"
        android:textStyle="bold">

    </TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint= "Value"
        android:inputType="number"
        android:id="@+id/editcus_value"
        android:layout_below="@+id/cus_value"
        android:drawableBottom= "@drawable/shapes1"
        android:layout_marginLeft="10dp"
        android:textCursorDrawable="@drawable/colorcursor"
        android:fontFamily="@font/avenirlight"
        android:padding="15dp"
        android:textSize="18sp"
        android:layout_marginTop="15dp">
    </EditText>
    <TextView
        android:text="Enquiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:textSize="18sp"
        android:id="@+id/cus_enquiry"
        android:layout_marginLeft="10dp"
        android:textColor="#000"
        android:fontFamily="@font/avenirlight"
        android:textStyle="bold">

    </TextView>

    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/listEnquiry"
        android:layout_below="@+id/cus_enquiry"
        android:hint= "select Enquiry"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="300dp"
        android:layout_height="35dp"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:textSize="18sp"/>
    <TextView
        android:text="LEAD SOURCES:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="630dp"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/avenirmedium"
        android:id="@+id/leadsource_head"
        android:textColor="#000"
        >

    </TextView>
    <TextView
        android:text="Lead Source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="690dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:id="@+id/cus_leadsrce"
        android:textColor="#000"
        android:fontFamily="@font/avenirlight"
        android:textStyle="bold">

    </TextView>
    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
        android:id="@+id/leadsrce_status"
        android:layout_below="@+id/cus_leadsrce"
        android:hint= "select Leads"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_width="300dp"
        android:layout_height="35dp"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:textSize="18sp"/>


    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="790dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:id="@+id/cus_descrptn"
        android:textColor="#000"
        android:fontFamily="@font/avenirlight"
        android:textStyle="bold">

    </TextView>
    <EditText

        android:layout_height="wrap_content"
        android:hint= "Descriptions"
        android:id="@+id/editcus_descrptn"
        android:layout_below="@+id/cus_descrptn"
        android:layout_width="300dp"
        android:drawableBottom= "@drawable/shapes1"
        android:layout_marginLeft="10dp"
        android:textCursorDrawable="@drawable/colorcursor"
        android:fontFamily="@font/avenirlight"
        android:padding="15dp"
        android:textSize="18sp"
        android:layout_marginTop="15dp">
    </EditText>
    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nexttabicon"
        app:elevation="4dp"
        app:backgroundTint="#666666"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:id="@+id/next_up"
        android:layout_below="@id/editcus_descrptn" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="905dp">
    </View>
</RelativeLayout>

</ScrollView>